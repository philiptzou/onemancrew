!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    %meta{:content => "IE=edge,chrome=1",
          :"http-equiv" => "X-UA-Compatible"}
    %title= (current_page.data.title.is_a?(String) ? "#{current_page.data.title} - " : '') + "One Man Crew"
    = stylesheet_link_tag "application"
  %body
    %a.hero(href="/")
    %header#header.fixedsticky
      .navbar
        .main-logo
        %ul.nav
          %li.nav-about
            = link_to 'About', '#'
          %li.nav-connect
            = link_to 'Connect', 'mailto:onemancrew42@gmail.com'
          %li.nav-behance
            = link_to 'Behance', 'https://www.behance.net/GreenyL', target: '_blank'
        .nav-toggle
          = link_to 'Toggle Navbar', '#'
    = yield
    = javascript_include_tag "application"
