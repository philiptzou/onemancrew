!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    %meta{:content => "IE=edge,chrome=1",
          :"http-equiv" => "X-UA-Compatible"}
    %title= current_page.data.title + " - One Man Crew"
    = stylesheet_link_tag "application"
  %body
    .hero
    %header#header.fixedsticky
      .navbar
        .main-logo
        %ul.nav
          %li.nav-about
            = link_to 'About', '#'
          %li.nav-connect
            = link_to 'Connect', '#'
          %li.nav-behance
            = link_to 'Behance', '#'
        .nav-toggle
          = link_to 'Toggle Navbar', '#'
    = yield
    = javascript_include_tag "application"
